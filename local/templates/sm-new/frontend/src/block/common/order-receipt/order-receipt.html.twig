<div class="order-receipt">
	<div class="container">
		<div class="order-receipt__wrapper">
			<div class="order-receipt__title">{{ title }}</div>
			<div class="order-receipt__items">
				{% for item in items %}
					<div class="order-receipt__item">
						<div class="order-receipt__img-wrapp">
							<img src="{{ item.previewPicture() }}" alt="{{ item.title() }}">
						</div>
						<div class="order-receipt__text">
							{{ item['PREVIEW_TEXT'] }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</div>